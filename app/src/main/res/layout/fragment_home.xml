<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_add_std"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_student" />

        <ImageView
            android:id="@+id/iv_time_table"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/iv_add_std"
            android:src="@drawable/ic_time_table" />

        <ImageView
            android:id="@+id/iv_attendance"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_check_list" />

        <ImageView
            android:id="@+id/iv_bill"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/iv_add_std"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:src="@drawable/ic_bill" />

    </RelativeLayout>
</ScrollView>